\begin{frame}
	\frametitle{Légende de l'automate}
	\begin{block}{Légende}
		\begin{description}
			\item [I] Initial
			\item [FTO] First Tag Opening
			\item [NTN] New Tag Name
			\item [ETN] End Tag Name
			\item [TC] Text Content
			\item [NT] New Tag
			\item [NCT] New Closing Tag
			\item [CTN] Colsing Tag Name
			\item [ECT] End Closing Tag
			\item [F] Final
		\end{description}
	\end{block}
\end{frame}

